<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@color/snow</item>
	</style>

	<style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
		<item name="tabSelectedTextColor">@color/snow</item>
		<item name="tabMode">fixed</item>
		<item name="tabIndicatorColor">@color/snow</item>
		<item name="android:layout_marginRight">@dimen/layout_margin</item>
		<item name="android:layout_marginLeft">@dimen/layout_margin</item>
	</style>

	<style name="FloatingSearchViewStyle">
		<item name="android:layout_height">@dimen/search_bar_height</item>
		<item name="android:background">@drawable/floating_searchview_bg</item>
		<item name="floatingSearch_viewSearchInputTextColor">@color/seaSeal</item>
		<item name="floatingSearch_viewSuggestionItemTextColor">@color/seaSeal</item>
		<item name="floatingSearch_hintTextColor">@color/Cornflower</item>
		<item name="android:layout_marginRight">@dimen/layout_margin</item>
		<item name="android:layout_marginLeft">@dimen/layout_margin</item>
	</style>
</resources>
